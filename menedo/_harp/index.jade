doctype html
html(lang='es' xmlns='http://www.w3.org/1999/xhtml')
	head
		title Menedo - Zombies vs. Humanos

		//- Metadatos
		meta(charset='utf-8')
		meta(http-equiv='Content-type' content='text/html;charset=UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

		link(href='img/favicon.ico?v=1' rel='shortcut icon' type='image/x-icon')

		//- Scripts
		script(src='//cdnjs.cloudflare.com/ajax/libs/d3/3.5.9/d3.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.js')


		script(src='//cdnjs.cloudflare.com/ajax/libs/sylvester/0.1.3/sylvester.js')

		//- Estilos
		link(rel='stylesheet' href='style.css')

	body
		script(defer src='pvi.js')
		script(defer src='main.js')

		svg

		fieldset
			legend Controles
			label Pasos / dia (N)
			input(name='N' type='range'  min='1' max='30' step='1')
			input(name='N' type='number' min='1' max='30' step='1')

			div
				label Exterminios (alpha)
				input(name='exterminios' type='range'  min='0' max='0.01' step='0.0001')
				input(name='exterminios' type='number' min='0' max='0.01' step='0.0001')

			div
				label Zombificaciones (beta)
				input(name='zombificaciones' type='range'  min='0' max='0.01' step='0.0001')
				input(name='zombificaciones' type='number' min='0' max='0.01' step='0.0001')

			div
				label Reanimaciones (zeta)
				input(name='reanimaciones' type='range'  min='0' max='0.01' step='0.0001')
				input(name='reanimaciones' type='number' min='0' max='0.01' step='0.0001')

			div
				label Patrullas?
				input(name='patrullasP' type='checkbox')

			div
				label Interpolacion
				select(name="interpolacion")
					option(value="linear") linear
					option(value="step") step
					option(value="basis") basis
					option(value="cardinal") cardinal
					option(value="monotone") monotone

			div
				button#reset(type='reset') Restaurar

