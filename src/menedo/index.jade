extends ../_custom_layout.jade

block scripts
	script(defer src='//cdnjs.cloudflare.com/ajax/libs/d3/3.5.9/d3.min.js')
	script(defer src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.min.js')
	script(defer src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js')
	script(defer src='//cdnjs.cloudflare.com/ajax/libs/sylvester/0.1.3/sylvester.min.js')

	script(defer src='pvi.js')
	script(defer src='main.js')

block stylesheets
	link(rel='stylesheet' href='style.css')

block body

	svg

	fieldset
		legend Controles

		dia
			label Pasos / dia (N)
			input(name='N' type='range'  min='1' max='30' step='1')
			input(name='N' type='number' min='1' max='30' step='1')

		hr

		div
			label Humanos inicialmente (y0_S)
			input(name='y0_S' type='range'  min='0' max='500' step='1')
			input(name='y0_S' type='number' min='0' max='500' step='1')
		div
			label Zombies inicialmente (y0_Z)
			input(name='y0_Z' type='range'  min='0' max='500' step='1')
			input(name='y0_Z' type='number' min='0' max='500' step='1')
		div
			label Muertos inicialmente (y0_R)
			input(name='y0_R' type='range'  min='0' max='500' step='1')
			input(name='y0_R' type='number' min='0' max='500' step='1')

		hr

		div
			label Exterminios (alpha)
			input(name='exterminios' type='range'  min='0' max='0.01' step='0.0001')
			input(name='exterminios' type='number' min='0' max='0.01' step='0.0001')
		div
			label Zombificaciones (beta)
			input(name='zombificaciones' type='range'  min='0' max='0.01' step='0.0001')
			input(name='zombificaciones' type='number' min='0' max='0.01' step='0.0001')
		div
			label Reanimaciones (zeta)
			input(name='reanimaciones' type='range'  min='0' max='0.01' step='0.0001')
			input(name='reanimaciones' type='number' min='0' max='0.01' step='0.0001')

		hr

		div
			label Patrullas?
			input(name='patrullasP' type='checkbox')

		div
			label Interpolacion
			select(name="interpolacion")
				option(value="linear") linear
				option(value="step") step
				option(value="basis") basis
				option(value="cardinal") cardinal
				option(value="monotone") monotone

		div
			button#reset(type='reset') Restaurar

